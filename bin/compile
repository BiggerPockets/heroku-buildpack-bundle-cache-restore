#!/usr/bin/env bash

build_dir=$1
cache_dir=$2
env_dir=$3
bin_dir=$(cd "$(dirname $0)"; pwd)
tmp_dir=$(mktemp -d)

for import in "$(dirname ${bin_dir})/lib/"*; do
  source "$import"
done

require_env_variable $env_dir "AWS_ACCESS_KEY_ID"
require_env_variable $env_dir "AWS_SECRET_ACCESS_KEY"
require_env_variable $env_dir "AWS_BUNDLE_CACHE_BUCKET"
require_env_variable $env_dir "AWS_BUNDLE_CACHE_PATH"

curl -s "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o $tmp_dir/aws.zip
unzip -qq -d $tmp_dir $tmp_dir/aws.zip
rm $tmp_dir/aws.zip
chmod +x $tmp_dir/aws/dist/aws

aws_bin=$tmp_dir/aws/dist/aws

gemfile_checksum=$(gemfile_checksum)
aws_bundle_cache_path=$(get_env_variable ${env_dir} "AWS_BUNDLE_CACHE_PATH")
gemfile_s3_file_path="${aws_bundle_cache_path}/${gemfile_checksum}.tar"

if check_file_exists "$aws_bin" "$gemfile_s3_file_path" -eq 0; then
  download_file "$aws_bin" "$gemfile_s3_file_path" "${tmp_dir}/bundle_cache.tar"
  tar -xvf "${tmp_dir}/bundle_cache.tar" -C $cache_dir
  rm $tmp_dir/bundle_cache.tar
fi
